{
  "compilerOptions": {
    // --- Base Settings --- 
    "target": "esnext",
    "module": "commonjs", // Or "esnext" depending on env
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "jsx": "react-jsx",
    "checkJs": false,
    "noEmit": true, // Base usually doesn't emit, packages do

    // --- Strictness --- 
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // Often false for React components
    "noImplicitThis": true,
    "alwaysStrict": true,

    // --- Module Resolution --- 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // Set base url for root path aliases if needed
    // "paths": { ... } // Define root paths if needed

    // --- Other --- 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
    // Add other root folders to exclude if necessary
  ]
} 